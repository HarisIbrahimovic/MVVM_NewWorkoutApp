<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main_design"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.NewWorkoutActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New workout"
            android:textSize="35sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp"
            android:textColor="#787575"
            />
        <EditText
            android:layout_gravity=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textColorHint="#CCCCCC"
            android:id="@+id/workoutName"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add exercise"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:textColor="#B1B0B0"
            android:background="@drawable/button_des"
            android:id="@+id/newExerciseButton"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>